<html>
<body>
    <%if (message === 'ok') {%>
        <div class="wrapper">
            <div class="search-container">
                <input type="search" id="search-input" placeholder="Busqueda rápida ↯">
                <span class="material-symbols-outlined">search</span>

                <button onclick="abrirModal(17);" class="help">
                    <span class="material-symbols-outlined">help_center</span>
                </button>
            
            </div>

        </div>
        <table id="miTabla">
            <thead>
                <tr>
                    <th>Oficina</th>
                    <th>Plataforma</th>
                    <th>Agente</th>
                    <th>Propio</th>
                    <th>Link</th>
                    <th>Bono</th>
                    <th>Ingresos</th>
                    <th>Registros</th>
                    <th>Cargaron</th>
                    <th>Cargas</th>
                    <th>Importe</th>
                    <th>Bonos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    <% datos.forEach(function(dato) { %>
                    <tr>
                        <td><%= dato.oficina %></td>
                        <td><%= dato.plataforma %></td>
                        <td><%= dato.agente_usuario %> </td>
                        <% if (dato.de_agente == true) { %>
                            <td> Sí </td>
                        <% } else { %>
                            <td> No </td>
                        <% } %>
                        <% if (dato.de_agente == true) { %>
                            <td>
                                <button class="botones" o onclick="copiarAlPortapapelesURL('<%=dato.id_token%>');">
                                    <span class="material-symbols-outlined">link</span>
                                </button>
                            </td>
                        <% } else { %>
                            <td></td>
                        <% } %>
                        <td><%= dato.bono_carga_1 %>%</td>
                        <td><%= dato.ingresos %></td>
                        <td><%= dato.registros %></td>
                        <td><%= dato.cargaron %></td>
                        <td><%= dato.total_cargas %></td>
                        <td>$ <%= dato.total_importe %></td>
                        <td><%= dato.total_bono %></td>
                        <% if (dato.de_agente == true) { %>
                            <td><button onclick="abrirModal(1, <%=dato.id_registro_token %>);">Editar</button></td>
                        <% } else { %>
                            <td><button onclick="abrirModal(1, <%=dato.id_registro_token %>);">Ver</button></td>
                        <% } %>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <div id="mensaje_portapapeles"></div>
        <div id="paginacion" class="pagenumbers"></div>
    <%} else {%>
        <h3><%= message %></h3>
    <%} %>
    <%if (id_rol < 3) {%>
        <td><button onclick="abrirModal(2, <%=id_oficina %>);">Nuevo Token</button></td>
    <%} %>
</body>
</html>