<html>
<head>
    <h1><%= title %></h1>
</head>
<body>
    <%if (message === 'ok') {%>
        <br>
        <table>
            <tr>
                <th>
                    Número del Cliente: <%= datos_usuario[0].cliente_numero %>
                </th>
                <th>
                    Usuario de Panel: <%= datos_usuario[0].cliente_usuario %>  
                </th>
            </tr>
            <tr>
                <th>
                    Oficina: <%= datos_usuario[0].operador %>  
                </th>
                <th>
                    Panel:  <%if (datos_usuario[0].id_bot == 1) {%>
                                Casino 365 Vip
                            <%} else if (datos_usuario[0].id_bot == 2) {%>
                                Casino 365 Online
                            <%} else if (datos_usuario[0].id_bot == 3) {%>
                                Casino 365 Club
                            <%} else if (datos_usuario[0].id_bot == 4) {%>
                                Casino 365 Guille
                            <%}%>
               </th>
            </tr>
            <tr>
                <th>
                    <label for="monto">Monto:</label>
                    <input type="number" id="monto" pattern="[0-9]{10}" required><br>            
                </th>
                <th>
                    <label for="cbu">CBU / Alias:</label>
                    <input type="text" id="cbu" maxlength="200"><br>
                </th>
            </tr>
        </table>
        <h3 class="warning">¡Al confirmar esta acción, no habrá opción de Deshacer!</h3>
        <button onclick="cargar_Retiro(<%=datos_usuario[0].id_cliente_usuario %>, '<%=datos_usuario[0].cliente_usuario%>' ,<%=datos_usuario[0].id_bot%>, <%=datos_usuario[0].id_operador%>);">Cargar Retiro</button>
        <div id="msgResultado"></div>
    <%} else {%>
        <h3><%= message %></h3>
    <%} %>
    <button onclick="cerrarModal();">Finalizar</button>
</body>
</html>