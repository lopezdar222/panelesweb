<html>
<head>
    <h1><%= title %></h1>
</head>
<style>
    .container {
        display: flex;
        width: 100%; /* Establece el ancho de la tabla al 100% del contenedor */
    }
    table {
        width: 100%; /* Establece el ancho de la tabla al 100% del contenedor */
        border-collapse: collapse; /* Combina los bordes de las celdas */
    }
</style>
<body>
    <%if (message == 'ok') {%>
        <br>
        <table>
            <tr>
                <th>
                    Usuario del Cliente: <%= datos.cliente_usuario %>
                </th>
                <th>
                    Agente: <%= datos.agente_usuario %>  
                </th>
            </tr>
            <tr>
                <th>
                    Plataforma: <%= datos.plataforma %>
                </th>
                <th>
                    Oficina: <%= datos.oficina %>  
                </th>
            </tr>
            <tr>
                <th>
                    <label for="titular">Titular Cuenta Bancaria Cliente:</label>
                    <input type="text" id="titular" maxlength="200"><br>
                </th>
                <th>
                    <label for="monto">Monto Neto:</label>
                    <input type="number" id="monto" pattern="[0-9]{10}" value = "0" required><br>            
                </th>
            </tr>
            <tr>
                <th>
                    <label for="observacion">Observaciones:</label>
                    <input type="text" id="observacion" maxlength="200"><br>
                </th>
                <th>
                    <label for="bono">Bono:</label>
                    <input type="number" id="bono" pattern="[0-9]{10}" value = "0" required><br>            
                </th>
            </tr>
            <tr>
                <th colspan = 2>
                    <label for="cuentaBancaria">Cuenta Bancaria:</label><br>
                    <select id="cuentaBancaria">
                        <% datos_cuentas.forEach(function(cuenta) { %>
                            <option value="<%=cuenta.id_cuenta_bancaria %>">
                                <%= cuenta.cuenta_bancaria %>
                            </option>
                        <% }); %>
                    </select>
                </th>
            </tr>
        </table>
        <h3 class="warning">¡Al confirmar esta acción, no habrá opción de Deshacer!</h3>
        <button onclick="cargar_Cobro_Manual(<%=datos.id_cliente %>);">Cargar Cobro</button>
        <div id="msgResultado"></div>
    <%} else {%>
        <h3><%= message %></h3>
    <%} %>
    <button onclick="cerrarModal();">Finalizar</button>
</body>
</html>